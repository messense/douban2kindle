{
    "manifest_version": 2,
    "name": "gk7-豆瓣阅读推送",
    "description": "豆瓣阅读推送",
    "version": "2.3",
    "icons": {
        "48": "images/icon48.png"
    },
    "background": {"scripts": ["scripts/jquery-1.8.3.min.js", "scripts/background.js"]},
    "page_action": {
        "default_icon": {
            "19": "images/icon19.png"
        },
        "default_title": "推送豆瓣阅读服务"
    },
    "options_page": "options.html",
    "update_url": "https://clients2.google.com/service/update2/crx",
    "permissions": [ "\u003Call_urls>", "tabs" ],
    "content_scripts":[{
        "matches":["http://read.douban.com/reader/ebook/*"],
	"css": [ "style/popup.css"],
        "js":["scripts/jquery-1.8.3.min.js", "scripts/jquery.cookie.js", "scripts/content_script.js"]
    }]
}
